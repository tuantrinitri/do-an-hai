@*@model IEnumerable<CMS.Areas.Identity.Models.Unit>*@
@model CMS.Helpers.PaginatedList<CMS.Areas.Identity.Models.Unit>

@{
    ViewData["Title"] = "Danh sách đơn vị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-white header-elements-inline">
        <h6 class="card-title">@ViewData["Title"]</h6>
        <div class="header-elements">
            <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="p-3">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-12 col-md-4">
                        <input type="text" name="q" placeholder="Nhập nội dung tìm kiếm" class="form-control form-control-sm" value="@ViewBag.filter_q" />
                    </div>
                    <div class="col-12 col-md-3">
                        @Html.DropDownList("activated", ViewBag.Status, "Tất cả trạng thái", new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="col-12 col-md-2 text-center">
                        <button type="submit" class="btn btn-sm btn-info"><i class="fa fa-filter"></i></button>
                        <a asp-action="Index" class="btn btn-sm btn-defaul ml-1"><i class="fa fa-eraser"></i></a>
                    </div>
                </div>
            </form>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Tên viết tắt
                        </th>
                        <th>
                            Tên đơn vị
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th class="text-center">
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShortName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @if (item.Activated)
                                {
                                    <span class="text-success">Hoạt động</span> }
                                else
                                {
                                    <span class="text-danger">Tạm khóa</span>}
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary ml-2" data-popup="tooltip" title="Sửa"><i class="fa fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" onclick="askToDelete(this); return false;" class="text-danger ml-2" data-popup="tooltip" title="Xóa"><i class="fa fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table> }
        else
        {
            <div class="p-3">
                <div class="alert alert-info alert-sm">Không tìm thấy dữ liệu</div>
            </div>}
    </div>
    @if (Model.TotalPages > 0)
    {
        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }
            <div>
                Hiển thị <b>@Model.Count()</b> trên tổng số <b>@ViewBag.totalitem</b> kết quả
            </div>
            <paginate info="@Model" page-action="Index" page-route-q="@ViewBag.filter_q" page-route-activated="@ViewBag.filter_activated" class="pagination pagination-flat pagination-sm justify-content-between mt-2 mt-sm-0"></paginate>
        </div>
    }
</div>
