@model CMS.Areas.Identity.DTOs.UserForCreateDTO

@{
    ViewData["Title"] = "Tạo mới tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form asp-action="Create">
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"><strong>Họ tên</strong> <span class="text-danger">*</span></label>
                <div class="col-lg-9">
                    <input asp-for="Fullname" class="form-control" placeholder="Nhập họ tên" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"><strong>Đơn vị</strong> <span class="text-danger">*</span></label>
                <div class="col-lg-9">
                    <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"><strong>Chức vụ</strong> <span class="text-danger">*</span></label>
                <div class="col-lg-9">
                    <select asp-for="JobTitleId" class="form-control" asp-items="ViewBag.JobTitleId"></select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"><strong>Tài khoản</strong> <span class="text-danger">*</span></label>
                <div class="col-lg-5">
                    <input asp-for="UserName" class="form-control" placeholder="Nhập tài khoản" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <span class="d-block alert alert-sm alert-info">Mật khẩu mặc định: <strong>123456</strong></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"><strong>Phân quyền</strong> <span class="text-danger">*</span></label>
                <div class="col-lg-9">
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"><strong>Email</strong></label>
                <div class="col-lg-9">
                    <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"><strong>Điện thoại</strong></label>
                <div class="col-lg-9">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập điện thoại" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-lg-3"></label>
                <div class="col-lg-9">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Activated" /> <span>Kích hoạt tài khoản</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn btn-light">Quay lại danh sách</a>
            <button type="submit" class="btn bg-blue legitRipple">Tạo mới</button>
        </div>
    </form>
</div>