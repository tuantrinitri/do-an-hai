@model IEnumerable<CMS.Areas.GalleryManager.Models.Gallery>

@{
    ViewData["Title"] = "Danh sách thư viện media";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-white header-elements-inline">
        <h6 class="card-title">@ViewData["Title"]</h6>
    </div>
    <div class="card-body p-0">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Mã định danh
                        </th>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Loại
                        </th>
                        <th class="text-center">
                            Trạng thái
                        </th>
                        <th class="text-center">
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Alias)
                            </td>
                            <td>
                                <a asp-action="Index" asp-controller="GalleryItems" asp-route-galleryId="@item.Id"><strong>@item.Title</strong></a>
                            </td>
                            <td>
                                @item.Type
                            </td>
                            <td class="text-center">
                                @if (item.Published)
                                {
                                    <span class="text-success">Hiển thị</span>
                                }
                                else
                                {
                                    <span class="text-danger">Ẩn</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Index" asp-controller="GalleryItems" asp-route-galleryId="@item.Id" class="btn btn-danger btn-xs" data-popup="tooltip" title="Quản lý"><i class="fa fa-stream mr-1"></i> Quản lý</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="p-3">
                <div class="alert alert-info alert-sm">Không tìm thấy dữ liệu</div>
            </div>
        }
    </div>
</div>
