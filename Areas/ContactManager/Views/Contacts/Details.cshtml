@model CMS.Areas.ContactManager.Models.Contact

@{
    ViewData["Title"] = "Chi tiết liên hệ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form asp-action="Edit">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">@ViewData["Title"]</h6>
            <div class="header-elements">
                <a asp-action="Index" class="btn btn-outline-dark">Danh sách liên hệ</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-5 p-0" style="border-right: 1px solid #ddd">
                    <div class="card-body card-contact">
                        <h6><strong><i class="fas fa-users" style="margin-right:10px"></i>THÔNG TIN LIÊN HỆ</strong></h6>
                        <div class="form-group row mb-0">
                            <label class="col-form-label col-lg-4"><strong>Họ tên </strong></label>
                            <div class="col-lg-8 col-form-label">
                                @Model.Fullname
                            </div>
                        </div>
                        <div class="form-group row mb-0">
                            <label class="col-form-label col-lg-4"><strong> Địa chỉ Email </strong></label>
                            <div class="col-lg-8 col-form-label">
                                @Model.Email
                            </div>
                        </div>
                     
                       
                    </div>
                </div>
                <div class="col-md-7 p-0">
                    <div class="card-body">
                        <h6>
                            <i class="fas fa-bars" style="margin-right:10px"></i>
                            <strong>NỘI DUNG LIÊN HỆ</strong>
                        </h6>
                        <div class="form-group row mb-0">
                            <div class="col-lg-12 col-form-label">
                                <blockquote class="blockquote blockquote-bordered py-2 pl-2 mb-0">
                                    <p>
                                        @Model.Content
                                    </p>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <button type="submit" name="status" value="False" class="btn btn-outline-dark">Đánh dấu chưa đọc</button>
        </div>
    </form>
</div>