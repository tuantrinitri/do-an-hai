<section class="module pt-0 pb-0" id="contact">
    <div class="row position-relative m-0">
        <div class="col-xs-12 col-md-6">
            <div class="row finance-image-content">
                <div class="col-md-10 col-md-offset-1">
                    <h2 class="module-title font-alt align-left">Thông tin liên hệ </h2>
                    <form role="form" asp-area="ContactManager" asp-controller="ContactsPublic" asp-action="Index" method="post">
                        <input type="hidden" asp-for="Title" value="Gửi liên hệ">
                        <input type="hidden" asp-for="PhoneNumber" value="123456789">
                        <div class="form-group">
                            <label class="sr-only" for="name">Họ và tên</label>
                            <input class="form-control" type="text" id="name" asp-for="@Model.Fullname" placeholder="Họ và tên*" required="required" data-validation-required-message="Vui lòng nhập họ tên."/>
                            <span asp-validation-for="@Model.Fullname" class="help-block text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="email">Email</label>
                            <input class="form-control" type="email" id="email" asp-for="@Model.Email" placeholder="Email*" required="required" data-validation-required-message="Vui lòng nhập địa chỉ."/>
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="7" id="message"  asp-for="@Model.Content" placeholder="Nội dung*" required="required" data-validation-required-message="Vui lòng nhập nội dung."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-block btn-round btn-d" type="submit">Gủi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-md-offset-6 side-image p-0">

            <div class="contact-map">
                <div class="box-text">
                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(globalSettings.EmbedMapURL))
                </div>
            </div>

        </div>
    </div>
</section>